{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "paths": {
      "@liga/*": ["src/*"],
      "package.json": ["package.json"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES6"
  },
  "include": ["src/**/*", "cli/**/*"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  }
}
